@model DMS.Backend.Models.Entities.User
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="wrapper">
            @{
                if (ViewBag.Message != null)
                {
                <p style="color:red;">@ViewBag.Message</p>
                }
            if (TempData["Success"] != null)
                {
                <p style="color:green;">@TempData["Success"]</p>
                }
            }
        <form asp-action="Login" method="post">
            <h1>Login</h1>


            <div class="input-box">
                <input asp-for="Email" placeholder="Email" required />
                <i class='bx bxs-envelope'></i>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="Password" placeholder="Password" type="password" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-forget">
                <label><input type="checkbox" /> Remember me</label>
            </div>

            <button type="submit" class="btn">Login</button>

            <div class="register-link">
                <p>Don't have an account? <a href="@Url.Action("Register", "Home")">Register</a></p>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
