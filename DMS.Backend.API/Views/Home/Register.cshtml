@model DMS.Backend.Models.Entities.User
@{
    Layout = null;
    ViewData["Title"] = "Sign-Up";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <form asp-action="Register" method="post">
            <h1>Sign-Up</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-box">
                <input asp-for="FirstName" placeholder="First Name" required />
                <i class='bx bxs-user'></i>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="LastName" placeholder="Last Name" required />
                <i class='bx bxs-user'></i>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="Email" placeholder="Email" required />
                <i class='bx bxs-envelope'></i>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="Password" placeholder="Password" type="password" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="remember-forget">
                <label><input type="checkbox" /> Remember me</label>
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>

            <div class="register-link">
                <p>Already have an account? <a asp-controller="Home" asp-action="Login">Login</a></p>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>