@model List<DMS.Backend.Models.Entities.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications</title>
    <link rel="stylesheet" href="../css/main.css">
</head>
<body>
    <header>
        <div class="logo">
            <img src="../images/logo.png" alt="logo">
            <h1>DOCUSHARE</h1>
        </div>
        <div class="login-btn">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Create", "Document")">Upload</a></li>
                <li><a href="@Url.Action("Index", "Friend")">Friend</a></li>
                <li><a href="@Url.Action("Index", "Notification")">Notification</a></li>
                <li><a href="@Url.Action("Login", "Home")"><ion-icon name="person-circle-outline" class="login-icon"></ion-icon></a></li>
            </ul>
        </div>
    </header>

    <div class="container">
        <div class="list-box">
            <h1>Your Notifications</h1>
            @if (Model.Any())
            {
                <ul>
                    @foreach (var notification in Model)
                    {
                        <li>
                            <p>@notification.Message</p>
                            <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post" style="display:inline;">
                                <button type="submit" class="mark-read-btn">Mark as Read</button>
                            </form>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No new notifications.</p>
            }
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>